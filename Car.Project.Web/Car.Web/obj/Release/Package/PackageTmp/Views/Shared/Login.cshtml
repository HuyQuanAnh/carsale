    <div class="LoginSection">
        <h2>Sign In</h2>
        <div class="item">Username</div>
        <div class="item">@Html.TextBox("userName", "", new { maxlength = "100",@class = "textbox" , id="txtUserName"}) </div>        
        <div class="item">Password</div>
        <div class="item">@Html.Password("passWord", "", new { maxlength = "100", @class = "textbox", id = "txtPassword" }) 
        </div>
        <div class="item error" style="color:red;">
            @if (Model != null && !string.IsNullOrEmpty(Model.ErrorMessage))
            {
                @Model.ErrorMessage

            }
        </div>
        
        <div class="item" style="margin-top: 20px;">
            <input id="btnSubmit" type="submit" value="Sign In" onclick="return validateLoginDetails();">
        </div>
    </div>
    
    <script type="text/javascript">
        function validateLoginDetails() {            
            if ($.trim($("#txtUserName").val()).length == 0) {
                $(".error").html("The username can not be empty.")
                return false;
            }
            if ($.trim($("#txtPassword").val()).length == 0) {
                $(".error").html("The password can not be empty.")
                return false;
            }
            return true;
        }

    </script>
}
